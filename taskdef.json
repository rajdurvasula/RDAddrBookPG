{
    "family": "RDAddrBook",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "rdaddrbook-pg",
            "cpu": 50,
            "memory": 512,
            "command": [
                "/root/app/start_app.sh"
            ],
            "entryPoint": [
                "sh", "-c"
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/ec2-task-definition",
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "environment": [
                {
                    "name": "APP_PORT",
                    "value": "APP_PORT_PARAM"
                },
                {
                    "name": "PG_HOST_IP",
                    "value": "PG_HOST_IP_PARAM"
                },
                {
                    "name": "PG_HOST",
                    "value": "PG_HOST_PARAM"
                },
                {
                    "name": "PG_PORT",
                    "value": "PG_PORT_PARAM"
                },
                {
                    "name": "APP_DB",
                    "value": "APP_DB_PARAM"
                },
                {
                    "name": "PG_USER",
                    "value": "PG_USER_PARAM"
                },
                {
                    "name": "PG_PASSWORD",
                    "value": "PG_PASSWORD_PARAM"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 9080,
                    "hostPort": 80
                }
            ]
        }
    ]
}

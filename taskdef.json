{
    "family": "RDAddrBook",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "rdaddrbook-pg",
            "cpu": 50,
            "memory": 512,
            "essential": true,
            "environment": [
                {
                    "name": "APP_PORT",
                    "value": "APP_PORT_PARAM"
                },
                {
                    "name": "PG_HOST_IP",
                    "value": "PG_HOST_IP_PARAM"
                },
                {
                    "name": "PG_HOST",
                    "value": "PG_HOST_PARAM"
                },
                {
                    "name": "PG_PORT",
                    "value": "PG_PORT_PARAM"
                },
                {
                    "name": "APP_DB",
                    "value": "APP_DB_PARAM"
                },
                {
                    "name": "PG_USER",
                    "value": "PG_USER_PARAM"
                },
                {
                    "name": "PG_PASSWORD",
                    "value": "PG_PASSWORD_PARAM"
                }
            ],
            "portMappings": [
                {
                    "containerPort": 9080,
                    "hostPort": 80
                }
            ]
        }
    ]
}
